                <TableColumn fx:id="colAddress" prefWidth="207.0" text="Address" />
                <TableColumn fx:id="colEmail" prefWidth="147.0" text="Email" />
                <TableColumn fx:id="colSalary" prefWidth="137.0" text="Salary" />
            </columns>
        </TableView>
        <TextField fx:id="txtSearch" layoutX="550.0" layoutY="299.0" onKeyPressed="#txtSearchOnAction" prefHeight="47.0" prefWidth="310.0" promptText="Search" styleClass="text-field">
        </TextField>
        <Button layoutX="576.0" layoutY="243.0" onAction="#btnUpdateOnAction" styleClass="button" style=" -fx-background-color: linear-gradient(to bottom, #3772ff, #0a2472);" text="Update">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button layoutX="468.0" layoutY="243.0" onAction="#btnDeleteOnAction" styleClass="button" style=" -fx-background-color: linear-gradient(to bottom, #c1121f, #780000);" text="Delete">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <TextField fx:id="txtSalary" layoutX="90.0" layoutY="254.0" prefHeight="40.0" prefWidth="310.0" promptText="Salary" styleClass="text-field" />
        <Label layoutX="90.0" layoutY="229.0" opacity="0.74" styleClass="label" text="Salary*" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Label>
        <ImageView fitHeight="47.0" fitWidth="64.0" layoutX="29.0" layoutY="14.0" onMouseClicked="#onClickBackButton" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/left-arrow.png" />
            </image>
        </ImageView>
        <Pane layoutX="361.0" layoutY="14.0" prefHeight="58.0" prefWidth="66.0" />
          <ImageView fitHeight="90.0" fitWidth="89.0" layoutX="424.0" layoutY="8.0" pickOnBounds="true" preserveRatio="true">
