                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Button layoutX="797.0" layoutY="243.0" onAction="#btnRemoveOnAction" styleClass="button" style=" -fx-background-color: linear-gradient(to bottom, #e09f3e, #9e2a2b);" text="CLEAR">
