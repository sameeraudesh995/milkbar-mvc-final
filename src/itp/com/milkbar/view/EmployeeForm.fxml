                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <TextField fx:id="txtId" layoutX="90.0" layoutY="98.0" onKeyPressed="#EnterKeyPressedOnAction" prefHeight="40.0" prefWidth="310.0" promptText="Employee Id*" styleClass="text-field" />
        <TextField fx:id="txtName" layoutX="517.0" layoutY="110.0" prefHeight="40.0" prefWidth="310.0" promptText="Employee Name*" styleClass="text-field" />
        <TextField fx:id="txtAddress" layoutX="90.0" layoutY="177.0" prefHeight="40.0" prefWidth="310.0" promptText="Employee Address*" styleClass="text-field" />
        <TextField fx:id="txtEmail" layoutX="517.0" layoutY="189.0" prefHeight="40.0" prefWidth="310.0" promptText="Email" styleClass="text-field" />
        <Label layoutX="99.0" layoutY="72.0" opacity="0.74" styleClass="label" text=" Id*" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Label>
        <Label layoutX="517.0" layoutY="85.0" opacity="0.74" styleClass="label" text=" Name*" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Label>
        <Label layoutX="90.0" layoutY="151.0" opacity="0.74" styleClass="label" text=" Address*" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Label>
        <Label layoutX="517.0" layoutY="164.0" opacity="0.74" styleClass="label" text="Email" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font></Label>
        <TableView fx:id="tblEmployee" layoutX="82.0" layoutY="352.0" prefHeight="217.0" prefWidth="778.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colID" prefWidth="118.0" text="ID" />
