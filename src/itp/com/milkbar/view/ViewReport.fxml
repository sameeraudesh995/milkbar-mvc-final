<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="pane" prefHeight="575.0" prefWidth="978.0" styleClass="mainForm" stylesheets="@stylesheets/viewReport.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="itp.com.milkbar.controller.ViewReportFormController">
    <children>
        <!-- Back Button -->
        <ImageView fitHeight="57.0" fitWidth="65.0" layoutX="20.0" layoutY="14.0" onMouseClicked="#ClickOnBackButton" pickOnBounds="true" preserveRatio="true" styleClass="back-button">
            <image>
                <Image url="@../assests/icons8-go-back-80.png" />
            </image>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </ImageView>

        <!-- Customer Report Section -->
        <ImageView fitHeight="139.0" fitWidth="150.0" layoutX="189.0" layoutY="150.0" onMouseClicked="#CustomerOnClicked" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/3d-report.png" />
            </image>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </ImageView>
        <Label layoutX="176.0" layoutY="310.0" style="-fx-text-fill: white;" text="Customer Report">
            <font>
                <Font name="Cooper Black" size="23.0" />
            </font>
        </Label>
        <Button layoutX="189.0" layoutY="350.0" onAction="#viewCustomerReport" prefHeight="30.0" prefWidth="150.0" styleClass="button" text="View Report" />

        <!-- Employee Report Section -->
        <ImageView fitHeight="139.0" fitWidth="150.0" layoutX="408.0" layoutY="150.0" onMouseClicked="#ClickOnActionEmployee" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/3d-report.png" />
            </image>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </ImageView>
        <Label layoutX="396.0" layoutY="310.0" style="-fx-text-fill: white;" text="Employee Report">
            <font>
                <Font name="Cooper Black" size="23.0" />
            </font>
        </Label>
        <Button layoutX="408.0" layoutY="350.0" onAction="#viewEmployeeReport" prefHeight="30.0" prefWidth="150.0" styleClass="button" text="View Report" />

        <!-- Daily Sale Section -->
        <ImageView fitHeight="139.0" fitWidth="150.0" layoutX="627.0" layoutY="150.0" onMouseClicked="#ClickOnDailySale" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@images/3d-report.png" />
            </image>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </ImageView>
        <Label layoutX="626.0" layoutY="310.0" style="-fx-text-fill: white;" text="Daily Sale">
            <font>
                <Font name="Cooper Black" size="23.0" />
            </font>
        </Label>
        <Button layoutX="627.0" layoutY="350.0" onAction="#viewDailySaleReport" prefHeight="30.0" prefWidth="150.0" styleClass="button" text="View Report" />
    </children>
</AnchorPane>
